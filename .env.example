# ============ Common ============
ENVIRONMENT=development
LOG_LEVEL=DEBUG

# ============ PostgreSQL ============
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Per-service database URLs
AUTH_DATABASE_URL=postgresql://postgres:password@localhost:5432/chatcraft_auth
ORG_DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/chatcraft_org
DOC_DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/chatcraft_doc
WORKSPACE_DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/chatcraft_workspace
BILLING_DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/chatcraft_billing
NOTIFICATION_DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/chatcraft_notification

# ============ MongoDB ============
MONGODB_URL=mongodb://mongo:password@localhost:27017
MONGODB_DATABASE=chatcraft_audit

# ============ Redis ============
REDIS_URL=redis://localhost:6379/0

# ============ MinIO ============
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=chatcraft-documents
MINIO_SECURE=false

# ============ RabbitMQ ============
RABBITMQ_URL=amqp://guest:guest@localhost:5672/

# ============ JWT / OAuth ============
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ============ AI ============
OPENAI_API_KEY=sk-xxx
ANTHROPIC_API_KEY=sk-ant-xxx
DEFAULT_LLM_MODEL=gpt-4o
EMBEDDING_MODEL=text-embedding-3-small

# ============ Email (Brevo) ============
BREVO_API_KEY=xkeysib-xxx
BREVO_SENDER_EMAIL=noreply@chatcraft.cc
BREVO_SENDER_NAME=ChatCraft

# ============ Application ============
APP_BASE_URL=http://localhost:3000

# ============ Payment (Paystack) ============
PAYSTACK_SECRET_KEY=sk_test_xxx
PAYSTACK_PUBLIC_KEY=pk_test_xxx
PAYSTACK_WEBHOOK_SECRET=whsec_xxx

# ============ CORS ============
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ============ Service URLs (internal) ============
AUTH_SERVICE_URL=http://localhost:8081
ORGANIZATION_SERVICE_URL=http://localhost:8082
